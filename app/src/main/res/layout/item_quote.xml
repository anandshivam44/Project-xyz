<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_marginTop="4dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        app:cardCornerRadius="7dp"
        app:cardElevation="3dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_category_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            app:cardCornerRadius="7dp"
            app:cardElevation="3dp">

            <RelativeLayout
                android:id="@+id/relative_layout_item_quote"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true">

                <RelativeLayout
                    android:id="@+id/cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:gravity="center|left"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/text_view_item_quote_title"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginRight="90dp"
                                android:gravity="center|left"
                                android:paddingLeft="10dp"
                                android:text="Water Wallpaper"
                                android:textColor="@color/primary_text"
                                android:textSize="16dp"
                                android:textStyle="bold" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/border_top">

                            <RelativeLayout
                                android:id="@+id/relative_layout_background_item_quote"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/bg_quote_background"
                                android:gravity="center"
                                android:paddingTop="15dp"
                                android:paddingBottom="15dp">

                                <TextView
                                    android:id="@+id/text_view_item_quote_status"
                                    android:layout_width="wrap_content"
                                    android:layout_height="280dp"
                                    android:ellipsize="end"
                                    android:gravity="center"
                                    android:maxLines="7"
                                    android:padding="18dp"
                                    android:textAlignment="center"
                                    android:textColor="@color/white"
                                    android:textSize="12pt" />
                            </RelativeLayout>

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_margin="4dp"
                                android:padding="2dp"
                                android:visibility="visible"
                                app:srcCompat="@drawable/ic_quote" />

                            <RelativeLayout
                                android:id="@+id/relative_layout_item_quote_review"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_marginTop="5dp"
                                android:background="@color/yellow"
                                android:elevation="1dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:tint="@color/white"
                                    app:srcCompat="@drawable/ic_access_time" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="25dp"
                                    android:gravity="center"
                                    android:text="@string/on_review"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/relative_layout_item_post_delete"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="5dp"
                                android:background="@color/red"
                                android:elevation="1dp"
                                android:paddingLeft="5dp"
                                android:paddingTop="2dp"
                                android:paddingRight="5dp"
                                android:paddingBottom="2dp">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:padding="2dp"
                                    android:tint="@color/white"
                                    app:srcCompat="@drawable/ic_delete_black" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="20dp"
                                    android:layout_marginLeft="20dp"
                                    android:gravity="center"
                                    android:text="@string/delete"
                                    android:textColor="@color/white"
                                    android:textSize="13dp" />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentLeft="true"
                                android:layout_alignParentBottom="true"
                                android:visibility="visible">

                                <RelativeLayout
                                    android:id="@+id/relative_layout_item_quote_views"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/border_views"
                                    android:elevation="1dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="4dp"
                                    android:paddingRight="7dp"
                                    android:paddingBottom="4dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:tint="@color/white"
                                        app:srcCompat="@drawable/ic_eye" />

                                    <TextView
                                        android:id="@+id/text_view_views_item_quote"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:text="12 k"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </RelativeLayout>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true">

                                <RelativeLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="5dp"
                                    android:background="@drawable/border_views"
                                    android:elevation="1dp"
                                    android:paddingLeft="7dp"
                                    android:paddingTop="4dp"
                                    android:paddingRight="7dp"
                                    android:paddingBottom="4dp">

                                    <androidx.appcompat.widget.AppCompatImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:tint="@color/white"
                                        app:srcCompat="@drawable/ic_share_app" />

                                    <TextView
                                        android:id="@+id/text_view_downloads_item_quote"
                                        android:layout_width="wrap_content"
                                        android:layout_height="15dp"
                                        android:layout_marginLeft="18dp"
                                        android:gravity="center"
                                        android:text="12 k shares"
                                        android:textColor="@color/white"
                                        android:textSize="10dp" />
                                </RelativeLayout>
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/relative_layout_dialog_top"
                            android:layout_width="match_parent"
                            android:layout_height="50dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:gravity="center|left"
                                android:orientation="horizontal"
                                android:paddingLeft="10dp">

                                <de.hdodenhof.circleimageview.CircleImageView
                                    android:id="@+id/circle_image_view_item_quote_user"
                                    android:layout_width="25dp"
                                    android:layout_height="50dp"
                                    android:src="@drawable/profile" />

                                <TextView
                                    android:id="@+id/text_view_item_quote_name_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="50dp"
                                    android:layout_marginLeft="4dp"
                                    android:ellipsize="end"
                                    android:gravity="center|left"
                                    android:maxLines="1"
                                    android:text="user name"
                                    android:textColor="@color/primary_text"
                                    android:textSize="13dp"
                                    android:textStyle="bold" />
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="50dp"
                                android:layout_alignParentRight="true"
                                android:gravity="center|right">

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_delete_item_quote"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_delete" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_fav_item_quote"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    android:tint="@color/red"
                                    app:srcCompat="@drawable/ic_favorite_border_gray" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_whatsapp_item_quote"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_whatsapp" />

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/image_view_share_item_quote"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="?android:attr/selectableItemBackground"
                                    android:clickable="true"
                                    android:focusable="true"
                                    android:padding="10dp"
                                    app:srcCompat="@drawable/ic_share" />
                            </LinearLayout>
                        </RelativeLayout>

                    </LinearLayout>

                    <RelativeLayout
                        android:id="@+id/relative_layout_progress_item_quote"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/progress_bg_box"
                        android:elevation="100dp"
                        android:visibility="visible">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="10dp"
                            android:layout_toRightOf="@+id/image_view_icon_item_quote"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/text_view_progress_item_quote"
                                android:layout_width="match_parent"
                                android:layout_height="22dp"
                                android:layout_marginTop="3dp"
                                android:gravity="left|center"
                                android:text="Downloading : 00%"

                                android:textColor="@color/kalo"
                                android:textSize="13dp"
                                android:textStyle="bold" />

                            <ProgressBar
                                android:id="@+id/progress_bar_item_quote"
                                style="?android:attr/progressBarStyleHorizontal"
                                android:layout_width="match_parent"
                                android:layout_height="10dp"
                                android:progress="10"
                                android:progressDrawable="@drawable/progress_bg" />
                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/image_view_icon_item_quote"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentLeft="true"
                            android:padding="3dp"
                            android:tint="@color/kesari"
                            android:visibility="visible"
                            app:srcCompat="@drawable/ic_file_download" />
                    </RelativeLayout>

                </RelativeLayout>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.cardview.widget.CardView>
</FrameLayout>