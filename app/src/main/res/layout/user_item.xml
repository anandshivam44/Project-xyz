<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/border_bottom_comment"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_view_user_iten"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:padding="7dp"
        app:civ_border_color="@color/kesari"
        app:civ_border_width="1dp"
        android:src="@drawable/profile" />

    <TextView
        android:id="@+id/text_view_name_item_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="19dp"
        android:text="Use Name"
        android:textColor="@color/kesari"
        android:textSize="18sp"
        android:textStyle="bold" />

</RelativeLayout>